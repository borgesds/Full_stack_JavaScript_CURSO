<%- include('../layouts/header', {title: 'Listas de Tarefas' }) %>

<%- include('../layouts/menu') %>

<section class="section">
  <div class="container">
    <div class="columns">
      <div class="column is-four-fifths">
        <h1 class="title size-4">Listas de Tarefas</h1>
      </div>
      <div class="column is-one-fifth">
        <!-- Nova lista -->
        <a href="/checklist/new" class="button is-success is-small">Nova Lista</a>
      </div>
    </div>

    <div class="columns is-multiline">
      <!-- Cria um loop para nÃ£o precisar repetir os cÃ³digos-->
      <% checklists.forEach(checklist=> { %>
        <div class="column is-one-quarter">
          <div class="card has-background-white-ter">
            <div class="card-content">
              <p class="subtitle is-size-5">
                <%= checklist.name %>
              </p>
              <p class="subtitle is-size-6">
                <%= checklist.task.length %> tarefas
              </p>
            </div>
            <footer class="card-footer">
              <p class="card-footer-item">
                <span>
                  <a href="/checklist/<%= checklist._id %>">Ver</a>
                </span>
              </p>
              <p class="card-footer-item">
                <span>
                  <a href="/checklist/<%= checklist.id %>/edit">Editar</a>
                </span>
              </p>
              <p class="card-footer-item">
                <span>
                  <a href="/checklist/<%= checklist.id %>?_method=delete" class="has-text-danger">Remover</a>
                </span>
              </p>
            </footer>
          </div>
        </div>
        <% }) %>
    </div>
  </div>
</section>

<%- include('../layouts/footer') %>